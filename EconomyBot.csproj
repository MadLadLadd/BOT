<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <LangVersion>latest</LangVersion>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="BooruSharp" Version="3.5.5" />
        <PackageReference Include="DSharpPlus" Version="4.4.0" />
        <PackageReference Include="DSharpPlus.CommandsNext" Version="4.4.0" />
        <PackageReference Include="DSharpPlus.Interactivity" Version="4.4.0" />
        <PackageReference Include="DSharpPlus.Lavalink" Version="4.4.0" />
        <PackageReference Include="DSharpPlus.SlashCommands" Version="4.4.0" />
        <PackageReference Include="DSharpPlus.VoiceNext" Version="4.4.0" />
        <PackageReference Include="FuzzierSharp" Version="3.0.1" />
        <PackageReference Include="LanguageExt.Core" Version="4.4.2" />
        <PackageReference Include="Microsoft.EntityFrameworkCore.Design" Version="7.0.4">
          <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
          <PrivateAssets>all</PrivateAssets>
        </PackageReference>
        <PackageReference Include="Microsoft.EntityFrameworkCore.Sqlite" Version="7.0.4" />
        <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
        <PackageReference Include="Reddit" Version="1.5.2" />
        <PackageReference Include="SpotifyAPI.Web" Version="7.0.0" />
    </ItemGroup>


    <ItemGroup>
        <None Update="token">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
        <None Update="reddittoken">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
        <None Update="googletoken">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
        <None Update="spotifytoken">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
        <None Update="bot.db">
          <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
    </ItemGroup>

</Project>
